@model List<EvaluacionPost.Models.Category>
@{
    ViewBag.Title = "Nuevo Post";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Nuevo Post</h2>

<form method="post" action="/Post/Create">
    <div class="form-group">
        <label for="title">Title</label>
        <input id="title" type="text" class="form-control" placeholder="Ingresa un Titulo" name="title" />
    </div>
    
    <div class="form-group">
        <label fro="status">Category</label>
        <select class="form-control" id="category" name="category">
            @foreach (var category in Model)
            {
                <option value="@category.id">@category.name</option>
            }
        </select>
        <br />
        <p>Contenido</p>
        <textarea></textarea>
        <!--TODO:Mandar el contexto -->
        @Html.Hidden("content", "TODO:No funiona (Hard code)")
    </div>
    <button type="submit" class="btn btn-default">publicar</button>
</form>


